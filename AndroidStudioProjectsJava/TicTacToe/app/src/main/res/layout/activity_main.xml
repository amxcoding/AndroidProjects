<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonPlayAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginLeft="158dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="158dp"
        android:layout_marginRight="158dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewWinner" />

    <TextView
        android:id="@+id/textViewWinner"
        android:layout_width="223dp"
        android:layout_height="39dp"
        android:layout_marginStart="94dp"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="94dp"
        android:layout_marginRight="94dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="368dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="96dp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageViewGrid00"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:onClick="onClick"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewGrid01"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:layout_row="0"
            android:layout_column="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewGrid02"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewGrid10"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewGrid11"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewGrid12"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewGrid20"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewGrid21"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/imageViewGrid22"
            android:layout_width="133dp"
            android:layout_height="133dp"
            android:layout_row="0"
            android:layout_column="8"
            android:scaleX="0.8"
            android:scaleY="0.8"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/red" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alarm">
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.alarmemina.Alarm.AddAlarm"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name="com.example.alarmemina.Settings.Settings"
            android:theme="@style/AppTheme.SettingsActionBar">
        </activity>

        <activity android:name="com.example.alarmemina.Settings.AlarmSound.AlarmSound"
            android:theme="@style/AppTheme.SettingsActionBar">
        </activity>

        <activity android:name="com.example.alarmemina.Alarm.EditAlarm"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity android:name="com.example.alarmemina.HandleAlarm.HandleAlarm"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <receiver android:name="com.example.alarmemina.HandleAlarm.AlarmReceiver">
            <intent-filter>
                <action android:name="com.example.alarm.alarms" />
            </intent-filter>
        </receiver>

        <service android:name="com.example.alarmemina.HandleAlarm.RingtonePlayingService"
            android:enabled="true">

        </service>

        <activity
            android:name="com.example.alarmemina.Alarm.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>